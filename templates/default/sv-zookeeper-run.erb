#!/bin/bash

exec 2>&1
CLASSPATH="/opt/zookeeper-<%= node["zookeeper"]["version"] %>/conf:/opt/zookeeper-<%= node["zookeeper"]["version"] %>/*:/opt/zookeeper-<%= node["zookeeper"]["version"] %>/lib/*"
ZOOMAIN="org.apache.zookeeper.server.quorum.QuorumPeerMain"
ZOOCFG="/opt/zookeeper-<%= node["zookeeper"]["version"] %>/conf/zoo.cfg"

ZOO_LOG_DIR="."
ZOO_LOG4J_PROP="INFO,CONSOLE"

exec chpst -u zookeeper java  "-Dzookeeper.log.dir=${ZOO_LOG_DIR}" "-Dzookeeper.root.logger=${ZOO_LOG4J_PROP}" -cp $CLASSPATH $JVMFLAGS $ZOOMAIN $ZOOCFG
